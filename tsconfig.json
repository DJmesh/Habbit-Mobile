{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "lib": ["ES2020", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] }
  },
  "include": ["**/*.ts", "**/*.tsx", "App.tsx"]
}
